<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <TableLayout

        android:id="@+id/tableLayout"
        android:layout_width="208dp"
        android:layout_height="165dp"
        android:padding="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:height="35dp"
                android:gravity="center"
                android:text="Name"
                android:textColor="#C9CD5C" />

            <TextView
                android:id="@+id/playern"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#5E5AC852"
                android:gravity="center"
                android:text="@string/player_name"
                android:textColor="#EBE8EC"
                android:textSize="15dp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ID"
                android:textColor="#C9CD5C" />

            <TextView
                android:id="@+id/playeri"
                android:layout_width="72dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/player_id"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Age"
                android:textColor="#C9CD5C" />

            <TextView
                android:id="@+id/playera"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/player_age"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Password"
                android:textColor="#C9CD5C" />

            <TextView
                android:id="@+id/playerp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="player Password"
                android:textColor="#EDE6E6"
                android:textSize="12dp"
                android:textStyle="italic" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/imagedesign"
        android:foreground="@drawable/ic_baseline_person_24"
        android:tint="@color/black"

        app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.353"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <TableLayout
        android:layout_width="105dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tableLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="101dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgt"
                android:layout_width="35dp"
                android:layout_height="38dp"

                android:layout_marginStart="12dp"

                android:layout_marginLeft="12dp"
                android:background="@drawable/circlebtn"
                android:foreground="@android:drawable/ic_menu_delete"
                tools:srcCompat="@android:drawable/screen_background_light_transparent" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="17dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/block"
                android:layout_width="35dp"
                android:layout_height="38dp"
                android:background="@drawable/circlebtn1"
                android:foreground="@drawable/ic_baseline_lock_24"
                app:srcCompat="@drawable/ic_baseline_lock_24" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>