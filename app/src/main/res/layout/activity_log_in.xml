<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/k"
    tools:context=".LogIn">

    <TextView
        android:id="@+id/logsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:textColor="#DAD49D"
        android:text="@string/new_trainee_signup_here"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logbtn" />

    <android.support.v7.widget.AppCompatEditText

        android:id="@+id/etname"
        android:layout_width="262dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/edittextdesgn"
        android:hint="@string/username123"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:drawableTint="@color/black"
        android:drawablePadding="5dp"
        android:textColorHint="#546E7A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="204dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/continue_as_admin_click_here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#DAD49D"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logsignup"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/logbtn"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:drawableRight="@drawable/ic_baseline_fitness_center_24"
        android:text="@string/login"
        android:fontFamily="sans-serif-condensed"
        android:drawableTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:background="@drawable/buttondesign1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etpass" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etpass"
        android:layout_width="262dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:background="@drawable/edittextdesgn"
        android:hint="@string/password"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        android:drawableTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etname"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="170dp"
        android:layout_height="59dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/spinnerdesign"
        android:entries="@array/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/csalaryc" />

    <ImageView
        android:id="@+id/csalaryc"
        android:layout_width="151dp"
        android:layout_height="134dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/imagedesign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24" />

</android.support.constraint.ConstraintLayout>