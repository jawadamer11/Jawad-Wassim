<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgt"
        android:layout_width="35dp"
        android:layout_height="38dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:foreground="@android:drawable/ic_menu_delete"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095"
        tools:srcCompat="@android:drawable/screen_background_light_transparent" />

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="161dp"
        android:layout_height="119dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgt"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:layout_goneMarginStart="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tn"
                android:layout_width="107dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="@string/coach_name"
                android:textColor="#8B14BD"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/coachi"
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/coach_id"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cspecial3"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/specialization"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ts"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/salary"
                android:textColor="@color/white" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/imagedesign"
        app:layout_constraintBottom_toBottomOf="@+id/tableLayout3"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout3"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186"
        app:srcCompat="@drawable/ic_baseline_person_24" />

</android.support.constraint.ConstraintLayout>